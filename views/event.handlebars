<section id="event-container" class="content-container">
  <article data-id="{{event.id}}" class="event-page">
    <h2 id="event-title">{{event.name}}</h2>
    <button id="edit-event">Edit Event</button>
    <button id="cancel-event">Cancel Event</button>
    <div id="event-game">
      <span>Game Being Played</span>
      <h3>{{event.game_name}}</h3>
    </div>
    <div id="event-description">
      <p>{{event.description}}</p>
    </div>
    <div id="event-notes">
      <span>Notes:</span>
      <p>{{event.notes}}</p>
    </div>
    <div id="event-location">
      {{#if event.is_virtual}}
        <span>Link:</span>
      {{else}}
        <span>Location:</span>
      {{/if}}
      <span>{{event.location}}</span>
    </div>
    <div id="event-attendees">
      <div id="event-attendees-header">
        <span>Attendees:</span>
        <span>Game Capacity: 0 / {{event.max_users}}</span>
      </div>
      <p></p>
    </div>
    <span id="event-dop">Date of Play: {{event.date}}</span>
    <button id="add-attendees">Add Members</button>
  </article>
</section>