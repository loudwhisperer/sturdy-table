<div id="content-container">

    <h2 id="displayName">Screen Name</h2id>
    <form action="/action_page.php">
        <input type="file" id="profile-pic" name="profile-pic">
        <p>Choose Profile Picture</p>
    </form>

    <!-- Tab links -->
    <div class="tab">
        <button class="tablinks" onclick="openCity(event, 'Host')">Hosted Events</button>
        <button class="tablinks" onclick="openCity(event, 'Attend')">Attending Events</button>
    </div>

    <!-- Tab content -->
    <div id="Host" class="tabcontent">
        {{#each events as |event|}}
        <a></a>
        {{/each}}
    </div>

    <div id="Attend" class="tabcontent">
      {{#each events as |event|}}
        <a></a>
        {{/each}}
    </div>


    <div id="ChangePassword" class="" >
        <div class="cardStyle">
            <form name="signupForm" id="signupForm">
        
                {{!-- <img src="" id="signupLogo" /> --}}
        
                <h2 class="formTitle">
                    Change Password
                </h2>
        
                <div class="inputDiv">
                    <label class="inputLabel" for="password">New Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
        
                <div class="inputDiv">
                    <label class="inputLabel" for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword">
                </div>
        
                <div class="buttonWrapper">
                    <button type="submit" id="submitButton" class="submitButton pure-button pure-button-primary">
                        <span>Speak Friend and Enter</span>
                        <span id="loader"></span>
                    </button>
                </div>
        
            </form>
        </div>

        <div id="ChangeDisplayName" class="">
            <div class="cardStyle">
                <form name="signupForm" id="signupForm">
        
                    {{!-- <img src="" id="signupLogo" /> --}}
        
                    <h2 class="formTitle">
                        Change your Display Name
                    </h2>
        
                    <div class="inputDiv">
                        <label class="inputLabel" for="password">Change Display Name</label>
                        <input type="password" id="displayname" name="password" required>
                    </div>
        
                    <div class="buttonWrapper">
                        <button type="submit" id="newNameButton" class="submitButton pure-button pure-button-primary">
                            <span>Change To a Name Your Ancestors Would be Proud Of</span>
                            <span id="loader"></span>
                        </button>
                    </div>
        
                </form>
            </div>
    
       
    </div>
</div>