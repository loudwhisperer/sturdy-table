<section id="account-page" data-id="{{user.id}}" class="content-container event-card">

 <div>
    <h2 id="displayName">{{user.displayname}}</h2>
    <img src="/images/mail-tablet-icon.svg" alt="mail device image">
  </div>

  <!-- Events with pending invite requests -->
  <div id="pending-invites">
    <span>Attendance Requests Pending</span>
    {{#each hosting as |event|}}
    <div data-pending="{{check_for_pending_invites event}}" class="">
      <a href="/api/events/{{event.id}}">{{event.name}}</a>
    </div>
    {{/each}}
  </div>

   <!-- Events -->
  <div>
    <!-- Tab links -->
    <div class="tab">
      <button class="tablinks" onclick="showTab('host')">Hosting</button>
      <button class="tablinks" onclick="showTab('attend')">Attending</button>
    </div>

    <!-- Tab hosting -->
    <div id="host" class="tabcontent">
      {{#each hosting as |event|}}
      <a href="/api/events/{{event.id}}">{{event.name}}</a>
      {{/each}}
    </div>

    <!-- Tab attending -->
    <div id="attend" class="tabcontent hidden">
      {{#each attending as |event|}}
      <a href="/api/events/{{event.id}}">{{event.eventName}}</a>
      {{/each}}
    </div>
  </div>

  <span onclick="changeNameModal()">Change Screen Name</span>
  <span onclick="changePassModal()">Change Password</span>

  <div id="ChangePassword" class="account-modal hidden">
    <div class="cardStyle">
      <!-- Close model button -->
      <img src="/images/x-icon.svg" alt="x icon" onclick="changePassModal()">
      <form name="signupForm">

        {{!-- <img src="" id="signupLogo" /> --}}

        <h2 class="formTitle">
          Change Password
        </h2>

        <div class="inputDiv">
          <label class="inputLabel" for="password">New Password</label>
          <input type="password" id="password" name="password" required>
        </div>

        <div class="inputDiv">
          <label class="inputLabel" for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword">
        </div>

        <div class="buttonWrapper">
          <button type="submit" id="submitButton" class="submitButton pure-button pure-button-primary">
            <span>Speak Friend and Enter</span>
            <span id="loader"></span>
          </button>
        </div>

      </form>
    </div>
  </div>

  <div id="ChangeDisplayName" class="account-modal hidden">
    <div class="cardStyle">
      <!-- Close model button -->
      <img src="/images/x-icon.svg" alt="x icon" onclick="changeNameModal()">
      <form name="signupForm">

        {{!-- <img src="" id="signupLogo" /> --}}

        <h2 class="formTitle">
          Change your Display Name
        </h2>

        <div class="inputDiv">
          <label class="inputLabel" for="displayname">Change Display Name</label>
          <input type="text" id="displayname" name="displayname" required>
        </div>

        <div class="buttonWrapper">
          <button type="submit" id="newNameButton" class="submitButton pure-button pure-button-primary">
            <span>Change To a Name Your Ancestors Would be Proud Of</span>
            <span id="loader"></span>
          </button>
        </div>

      </form>
    </div>
  </div>
</section>
