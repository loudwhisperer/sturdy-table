<section>
  {{#each events as |event|}}
    <article>
      <div class="card-container-title">
        <h2>{{event.name}}</h2>
      </div>
      <div class="card-container-game">
        <span>Game Being Played:</span>
        <h3>{{event.game_name}}</h3>
      </div>
      <div class="card-container-footer">
        <div>
          {{#if event.is_virtual}}
            <img src="" alt="virtual link">
          {{else}}
            <img src="" alt="physical location">
          {{/if}}
        </div>
        <div>
          <span>{{event.date}}</span>
        </div>
        <div>
          <span><!-- helper code to calculate {{}} -->00 / {{event.max_users}}</span>
        </div>
      </div>
    </article>
  {{/each}}
</section>